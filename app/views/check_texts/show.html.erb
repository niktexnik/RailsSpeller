<h2>-------------------------------------------------Spell checker------------------------------------------------------------</h2>
<%= form_with url: check_texts_check_text_path do |form| %>
<div>
    <%= form.label 'Введите текст:', {:class => 'form-check-label'} %><br>
    <%= form.text_area :text, {:class => 'form-control'}%><br>
</div>
<div>
    <%= form.submit 'Проверить', {:class => 'btn btn-lg btn-primary col-md-12'}%> 
</div><br>
<div>
    <h2>Результат проверки:</h2>
    <ul>
    <li><%=@spell_check_error%></li>
    </ul>
</div>
<% end %>